{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.fixAll.stylelint": "explicit"
    },
    "eslint.validate": [
        "javascript"
    ],
    "[json]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    }
}